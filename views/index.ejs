            if (id.length < 4) return 'JIS';

            const digit = id[3]; // ‡∏ï‡∏≥‡πÅ‡∏´‡∏ô‡πà‡∏á‡∏ó‡∏µ‡πà 4 (index 3)

            if (['1', '2', '3', '4'].includes(digit)) {
